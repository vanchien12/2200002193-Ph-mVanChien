@model EmployeeManagement.Models.Department

@{
    ViewData["Title"] = "Delete Department";
}

<h2>Delete Department</h2>

<h4>Are you sure you want to delete this department?</h4>
<hr />
<dl class="row">
    <dt class="col-sm-2">Name</dt>
    <dd class="col-sm-10">@Model.DepartmentName</dd>

    <dt class="col-sm-2">Address</dt>
    <dd class="col-sm-10">@Model.Address</dd>

    <dt class="col-sm-2">Phone</dt>
    <dd class="col-sm-10">@Model.OfficePhone</dd>
</dl>

<form asp-action="Delete">
    <input type="hidden" asp-for="DepartmentId" />
    <input type="submit" value="Delete" class="btn btn-danger" />
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
