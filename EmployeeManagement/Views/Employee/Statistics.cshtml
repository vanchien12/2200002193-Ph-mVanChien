@model IEnumerable<EmployeeManagement.Models.ViewModels.DepartmentStatisticsViewModel>

    @{
    ViewData["Title"] = "Employee Statistics";
    }

    <h2>Employee Statistics by Department</h2>

    <table class="table table-bordered table-striped">
        <thead class="table-dark">
            <tr>
                <th>Department</th>
                <th>Number of Employees</th>
                <th>Total Salary</th>
                <th>Total Female Employees</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
        {
            <tr>
                <td>@item.DepartmentName</td>
                <td>@item.NumberOfEmployees</td>
                <td>$@item.TotalSalary</td>
                <td>@item.TotalFemale</td>
            </tr>
        }
        </tbody>
    </table>

    @if (!Model.Any())
{
    <div class="alert alert-warning">No data available for statistics.</div>
}
